# Firebase Client SDK Configuration (public)
# These can be found in your Firebase project settings under "General"
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=""
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""

# Firebase Admin SDK Configuration (private - keep this in .env.local, DO NOT COMMIT)
# Generate this from Firebase Console > Project Settings > Service Accounts > Generate new private key
# Paste the entire JSON object from your Firebase service account key here, inside the single quotes.
FIREBASE_SERVICE_ACCOUNT_JSON=''

# Stripe Webhook Secret (optional, for Stripe integration)
# You get this when you create a webhook endpoint in your Stripe dashboard.
STRIPE_WEBHOOK_SECRET=""

# Port for local development
PORT=9002
